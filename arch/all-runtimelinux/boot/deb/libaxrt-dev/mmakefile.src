#MM
runtime-package-deb-libaxrt-dev-includes : $(INCLUDE_DEST_FILES) $(INCLUDE_DEST_DIRS)

$(INCLUDE_DEST_DIR)/% : $(SDK_SRC_DIR)/include/%
