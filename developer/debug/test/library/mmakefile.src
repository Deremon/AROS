TARGETDIR := $(AROS_TESTS)/Library
CUNITEXEDIR := $(AROS_TESTS)/cunit/library

USER_INCLUDES := -I$(TARGETDIR)/$(AROS_DIR_DEVELOPMENT)/include
USER_LDFLAGS := -L$(TARGETDIR)/$(AROS_DIR_DEVELOPMENT)/lib

# Libraries

%build_linklib mmake=test-library-peropenerlib-extlib \
    libname="extlib1" \
    files="peropenervalue_extlib" \
    libdir=$(TARGETDIR)/$(AROS_DIR_DEVELOPMENT)/lib

%build_prog mmake=test-library-peropenerlib-extlibseg \
    files="peropenervalue_extlibseg" progname="extlib1.seg" targetdir=$(TARGETDIR) \
    uselibs="extlib1" usestartup=no

%build_module mmake=test-library-singlelib \
    modname=single modtype=library \
    files="singlelib" \
    prefix=$(TARGETDIR)

%build_module mmake=test-library-peropenerlib \
    modname=peropener modtype=library \
    files="peropenervalue peropenernolib peropenernamechange peropenerinit" \
    linklibfiles="peropenervalue_linklib" \
    prefix=$(TARGETDIR)

%build_module mmake=test-library-userellib \
    modname=userel modtype=library \
    files="userellib" \
    prefix=$(TARGETDIR) uselibs="single"

# CUnit tests

USER_INCLUDES +=
USER_CFLAGS := $(CFLAGS_NO_BUILTIN)
USER_LDFLAGS +=

#MM test-library-relbase-cunit : linklibs-cunit test-library-userellib test-library-singlelib test-library-peropenerlib

%build_prog mmake=test-library-autoopen-cunit \
    progname=cunit-library-autoopen targetdir=$(CUNITEXEDIR) \
    uselibs="single cunit"

%build_prog mmake=test-library-library-cunit \
    progname=cunit-library-library targetdir=$(CUNITEXEDIR) \
    uselibs="single cunit"

%build_prog mmake=test-library-relbase-cunit \
    progname=cunit-library-relbase targetdir=$(CUNITEXEDIR) \
    uselibs="userel peropener cunit"

#MM- test-library-cunit : test-library-relbase-cunit test-library-autoopen-cunit test-library-library-cunit
#MM- test-library-cunit-quick : test-library-relbase-cunit-quick test-library-autoopen-cunit-quick test-library-library-cunit-quick

